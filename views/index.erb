<!--Banner and slogan-->
<div class="banner-container">
  <img src="<%= @content['images']['banner'] %>" class="home-image" alt="custom image goes here">
  <div class="banner-container">
    <div class="banner-text">
      <h2><%= @content['slogan'] %></h2>
      <button type="button" class="btn btn-primary btn-lg">Contact Us</button>
    </div>
  </div>
</div>

<br>

<!--Mini photo gallery-->
<div class="title-container">
  <h3>Gallery:</h3>
</div>
<!--TODO: Make the client images scroll between different clients or make this a scrolling gallery of images from previous works-->

<div class="container text-center m-auto">
  <div class="row row-cols-auto d-flex justify-content-center">
    <div class="col g-0">
      <img src="<%= @content['images']['gallery-one'] %>" class="image-gallery">
    </div>
    <div class="col g-0">
      <img src="<%= @content['images']['gallery-two'] %>" class="image-gallery">
    </div>
    <div class="col g-0">
      <img src="<%= @content['images']['gallery-three'] %>" class="image-gallery">
    </div>
    <div class="col g-0">
      <img src="<%= @content['images']['gallery-four'] %>" class="image-gallery">
    </div>
  </div>
</div>

<!--Mini text section-->
<div class="title-container">
  <p class="title-font"><%= @content['home']['heading-one'] %></p>

  <p>
    <%= @content['home']['section-one-text'] %>
  </p>
</div>

<br>

<!--Card section-->
<div class="title-container">
  <p class="title-font"><%= @content['cards']['card-heading'] %></p>
</div>

<%= erb :cards %>

<br>
<br>

<!--Colored mini banner-->
<div class="colored-section">
  <p class="colored-section-text" style="color: white;"><strong><%= @content['home']['midsection-text'] %></strong></p>
</div>

<br>

<!--About/FAQ section-->
<div class="container text-center">
  <div class="row">
    <div class="col about-text">
      <div class="row">
        <div class="col">
          <img src="<%= @content['home']['about-image1'] %>" class="about-gallery">
        </div>
        <div class="col">
          <img src="<%= @content['home']['about-image2'] %>" class="about-gallery">
        </div>
      </div>
      
      <h3>About Us</h3>
      <p><strong><%= @content['home']['about-subtext'] %></strong></p>
      <p>
        <%= @content['home']['about']%>
      </p>
    </div>

    <div class="col">
      <h3 style="text-align: left; padding-bottom:10px;">Frequently Asked Questions</h3>
      
      <%= erb :faq %>
    </div>
  </div>
</div>

<br>